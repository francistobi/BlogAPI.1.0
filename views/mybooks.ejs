<%- include("partials/header"); -%>
<div class="homesection ">
  <div class="innersection ">
    <nav>
      <img src="/logo.png" alt="logo" class="logo">
      <ul>
        <li><a href="/api/v1/auth/logout">Log Out</a></li>
      </ul>
    </nav>
    <div class="middiv">
      <div class="box noborder">
        <h1 class="books">BOOKS</h1>
        <a href="/api/v1/blog/n" class="new">Create new article</a>
      </div>
      <% articles.forEach(article =>{ %>
        <div class="box">
          <h2><%= article.title %> by  <%= article.author%> <span>< <%= article.state%> ></span></h2>
          <h3><%= article.description %></h3>
          <h4><%= article.timestamp.toLocaleDateString()%></h4>
          <div class="blw">
            <a href="/api/v1/blog/<%=article.id%>" style="color: blue; border: 2px solid blue;">Read more</a>
            <a href="/api/v1/blog/edit/<%=article.id%>" style="color: rgb(104, 67, 78); border: 2px solid rgb(104, 67, 78);">Edit</a>
            <form action="/api/v1/blog/<%=article.id%>?_method=DELETE" method="POST">
              <button class="del" type="submit" style="color: rgb(161, 12, 57); border: 2px solid rgb(161, 12, 57);"> Delete </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>





<%- include("partials/footer"); -%>
