<%- include("partials/header"); -%>
<section class="homesection">
  <div class="innersection">
   <div class="container">
      <form class="form" action="/api/v1/blog/edit/<%=article.id%>?_method=PUT" method="POST">
        
        <label for="title">Title:</label><br>
        <input type="text" id="title" name="title" required><br>

        <label for="description">Description:</label><br>
        <input type="text" id="description" name="description" required><br>

        <label for="body">Body:</label><br>
        <textarea id="body" name="body" id="body" name="body" required></textarea><br>
        
        <label for="tags"> Tags:</label><br>
        <input type="text" id="tags" name="tags" required><br>
        
        <label for="state">Change State to published:</label><br>
        <input type="checkbox" id="state" name="state" required><br>

        <button type="submit" class="edt">Edit</button>
        <a href="/api/v1/blog/<%=article.id%>" class="goback" style="background-color:rgb(104, 67, 78);">Cancel</a>
    </form>
   </div>
  </div>
</section>
<%- include("partials/footer"); -%>